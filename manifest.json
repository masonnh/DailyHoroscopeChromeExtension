{
  "manifest_version": 3,
  "name": "Your Unique Daily Horoscope",
  "version": "0.0.1",
  "description": "Get your unique daily horoscope based on your astrological sign",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage", 
    "alarms"
  ],
  "background": { "service_worker": "background.js" }
}
